    {
      "name": "Create booking",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var jsonData = pm.response.json();",
              "",
              "pm.environment.set(\"id\", jsonData.bookingid); "
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "var first_name = pm.variables.replaceIn(\"{{$randomFirstName}}\")",
              "console.log(first_name)",
              "pm.environment.set(\"firstname\", first_name)",
              "",
              "var price = pm.variables.replaceIn(\"{{$randomInt}}\")",
              "pm.environment.set(\"price\", price)",
              "",
              "const moment = require('moment')",
              "const today = moment()",
              "var checkin = today.add(5,'d').add(2,'M').format(\"YYYY-MM-DD\")",
              "console.log(checkin)",
              "pm.environment.set('checkin',checkin)"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"firstname\": \"{{firstname}}\",\n    \"lastname\": \"ABc\",\n    \"totalprice\": {{price}},\n    \"depositpaid\": true,\n    \"bookingdates\": {\n        \"checkin\": \"{{checkin}}\",\n        \"checkout\": \"2019-01-01\"\n    },\n    \"additionalneeds\": \"Breakfast\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseURL}}/booking/",
          "host": [
            "{{baseURL}}"
          ],
          "path": [
            "booking",
            ""
          ]
        },
        "description": "This is a GET request and it is used to \"get\" data from an endpoint. There is no request body for a GET request, but you can use query parameters to help specify the resource you want data on (e.g., in this request, we have `id=1`).\n\nA successful GET response will have a `200 OK` status, and should include some kind of response body - for example, HTML web content or JSON data."
      },
      "response": []
    },
    {
      "name": "Search bookig",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var status = pm.response.code;",
              "console.log(status)",
              "",
              "if(status == 200)",
              "{",
              "    var jsonData = pm.response.json()",
              "",
              "    pm.test(\"Check if the firstname is correct\", function (){",
              "        pm.expect(jsonData.firstname).to.eql(pm.environment.get(\"firstname\")) ",
              "    })",
              "    pm.test(\"Check if the firstname is not empty\", function () {",
              "        pm.expect(jsonData.firstname).to.not.be.empty",
              "    })",
              "    pm.test(\"Check if the firstname is not null\", function () {",
              "        pm.expect(jsonData.firstname).to.not.be.null",
              "    })",
              "    pm.test(\"Check if the firstname length is at least 2\", function () {",
              "        pm.expect(jsonData.firstname.length).to.be.at.least(2)",
              "    })",
              "    pm.test(\"Check if the firstname length is at most 30\", function () {",
              "        pm.expect(jsonData.firstname.length).to.be.at.most(30)",
              "    })",
              "    pm.test(\"Check if the firstname is string\", function () {",
              "        pm.expect(jsonData.firstname).to.be.a(\"string\")",
              "    })",
              "    pm.test(\"Check if the firstname has no special character\", function () {",
              "        pm.expect(jsonData.firstname).to.match(/^[A-Za-z0-9]+$/);",
              "    });",
              "    pm.test(\"Check if the total price is correct\", function () {",
              "        pm.expect(jsonData.totalprice.toString()).to.eql(pm.environment.get(\"price\"))",
              "    })",
              "",
              "    pm.test(\"Check if the checkin date is correct\", function () {",
              "        pm.expect(jsonData.bookingdates.checkin).to.eql(pm.environment.get(\"checkin\"))",
              "    }) ",
              "}   else if(status==404){",
              "    pm.test(\"Not Found\")",
              "}   else if(status == 401 || status == 403){",
              "    pm.test(\"Unauthorized or Forbidden\")",
              "}   else{",
              "    pm.test(\"Unexpected Status Code\")",
              "}"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n\t\"name\": \"Add your name in the body\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
